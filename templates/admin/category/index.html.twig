{% extends 'admin/list_base.html.twig' %}

{% block listing %}

    <table class="table table-sm table-light table-striped table-hover table-bordered">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for key, item in data %}
            <tr class="table-secondary">
                <th scope="row">{{ key + 1 }}</th>
                <td>{{ item.title }}</td>
                <td>{% if item.isPublished %} Активен {% endif %}</td>
                <td><a href="{{ path('admin_category_update', {'id': item.id}) }}">Изменить</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

