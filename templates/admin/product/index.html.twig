{% extends 'admin/list_base.html.twig' %}


{% block listing %}
<table class="table table-sm table-light table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Act</th>
        <th scope="col">Цена</th>
        <th scope="col">Цена old</th>
        <th scope="col">Категор</th>
        <th scope="col">Дата созд</th>
        <th scope="col">Дата обн</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {% for key, item in data %}
        <tr class="table-secondary">
            <th scope="row">{{ key + 1 }}</th>
            <td>{{ item.name }}</td>
            <td>{% if item.active %}Да{% endif %}</td>
            <td>{{ item.price }}</td>
            <td>{{ item.priceOld }}</td>
            <td>{{ item.categoryObject.title }}</td>
            <td>{{ item.createAt.getTimestamp() < 0 ? "" : item.createAt|date("m/d/Y") }}</td>
            <td>{{ item.updateAt is empty ? "" : item.updateAt|date("m/d/Y") }}</td>
            <td> <a href="{{ path('admin_product_update', {'id': item.id}) }}">Изменить</a></td>
            <td><a onclick="if (!confirm('Подтвердите')) return false;" href="{{ path('admin_product_delete', {'id': item.id}) }}">Удалить</a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

