{% extends 'admin/adminbase.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 text-center mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <a href="{{ path('admin_post_create') }}" class="btn btn-success">Создать пост</a>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h2>Список постов</h2>
                <ul>
                {% for post in posts %}
                    <li>
                        {{ post.title }} <a href="{{ path('admin_post_update', {'id': post.id}) }}">Изменить</a>
                        <img src="{{ asset('uploads/post/') }}{{ post.image }}" style="width: 100px" alt="">
                    </li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}