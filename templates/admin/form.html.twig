{% extends 'admin/base5.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-12">
                <h1 class="display-4 text-center mt-5">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-12">
                {{ form(form) }}

                {% if path %}
                    <div class="mb-3">
                        <img src="{{ path }}" style="max-height: 100px"  alt="" />
                    </div>
                {% endif %}
 
            </div>
        </div>
    </div>
{% endblock %}