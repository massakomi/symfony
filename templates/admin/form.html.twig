{% extends 'admin/base5.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-2">

            </div>
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Главная</a></li>
                        {% for url, title in breadcrumbs %}
                            <li class="breadcrumb-item{% if loop.last %} active{% endif %}" aria-current="page">
                                {% if url %}
                                    <a href="{{ url }}">{{ title }}</a>
                                {% else %}
                                    {{ title }}
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ol>
                </nav>

                <h1 class="display-6">
                    {{ title }}
                </h1>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                {{ form(form) }}

                {% if path is defined and path %}
                    <div class="mb-3">
                        <img src="{{ path }}" style="max-height: 100px"  alt="" />
                    </div>
                {% endif %}
 
            </div>
        </div>
    </div>
{% endblock %}