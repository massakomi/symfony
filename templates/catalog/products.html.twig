{% extends 'clear.html.twig' %}

{% block title %}Каталог товаров{% endblock %}

{% block content %}

    <div class="row">
    {% for item in products %}
        <div class="col-lg-3 mb-4">
            <div class="card">
                {% if item.image %}
                    <img src="{{ imageDir }}{{ item.image }}" class="card-img-top" alt="...">
                {% else %}
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect></svg>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ item.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ item.price|price }} <s>{{ item.priceOld|price }}</s></h6>
                    <!--<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>-->
                    <a href="#" class="card-link add2basket" data-id="{{ item.id }}">В корзину</a>
                    <a href="{{ path('product', {id: item.id}) }}" class="card-link">Подробнее</a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>


{% endblock %}
